@import '../animate.css';

blue = #2d66bd
btnColor = #f0f0f0

body
	background url('/img/dark_exa.png')

.fa-heart-o
	margin-bottom 30px

.intro
	background-image url('/img/wedding-bg.jpg')

	h1
		font-family 'Lora'
		font-weight normal
		text-transform none

.the-date
	/* Colorzilla.com generated css gradients */
	background: -moz-linear-gradient(top, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 32%, rgba(0,0,0,0) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,1)), color-stop(32%,rgba(0,0,0,1)), color-stop(100%,rgba(0,0,0,0))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 32%,rgba(0,0,0,0) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 32%,rgba(0,0,0,0) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 32%,rgba(0,0,0,0) 100%); /* IE10+ */
	background: linear-gradient(to bottom, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 32%,rgba(0,0,0,0) 100%); /* W3C */
	height 1100px
	
	h1
		margin-top 250px
		text-align center
		text-transform none

#about
	background-color blue
	padding-bottom 150px
	width 100%

	.row
		margin 0 auto

	p
		text-align left

.download-section
	background-image url(/img/guestbook-bg.jpg)

.fa-pencil,
.fa-book
	margin-right 4px

.btn-default
	border 1px solid btnColor
	color btnColor

	&:hover,
	&:focus
		background-color blue
		border solid 1px btnColor
		color btnColor

#contact
	a
		color btnColor
		text-decoration underline

		&:hover
			color btnColor
			opacity 0.7
			text-decoration underline
			cursor pointer

#colophonModal
	color #0f0f0f

	.modal-content
		background blue
		border-radius 10px
		color btnColor
	
	.modal-body a
		color btnColor
		cursor pointer
		text-decoration underline

	.modal-header
		border-bottom none
		text-align center 

	dd
		margin-left 2em

@media screen and (min-width: 767px)
	.intro
		.brand-heading
			font-size 130px

	#about
		padding-top 150px

		.row
			width 750px

@media screen and (min-width: 992px)
	#about .row
		width 960px

@media screen and (min-width: 1200px)
	#about .row
		width 1170px

